<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

<body>
    <%- include('./partials/header') %>


    <form class="formulario" action="/products" method="POST" enctype="multipart/form-data">
        <h4><i class="fas fa-user-plus"></i>Add product:</h4>
        <div class="caja">
            <label for="NombreProducto"> Product name:</label><br><input type="text" name="product_name"
                placeholder="Insert product name">
        </div>
        <div class="caja">
            <label for="precio">Product price:</label><br><input type="text" name="product_price" id="precio"
                placeholder="Insert product price">
        </div>
        <div class="caja">  <label for="product_category" class="category" name="product_category">Category: </label>
            <p>
                <select name="product_category" id="" class="StockDisponible" required>
                    <option value="" disabled selected>- select category - </option>
                    <% allProduct_category.forEach(product_category => { %>
                    <option value="<%= product_category.id %>"><%= product_category.category_name %></option>
                    <% }); %>
                </select>
      
            <br>
            
        <div class="caja">
            <label> Product image: </label> <input type="file" name="product_image" accept=".jpg, .jpeg, .png">
        </div>
        <div class="caja"> <label for="Stock" class="Stock" name="stock"></label>Stock:
            <br>
            <select class="StockDisponible">
                <option value="Disponible">Available</option>
                <option value="No Disponible">Unavailable</option>
            </select> </div>
        <div class="caja">
            <label class='descripcionProducto' for="DescripcionProducto"> Product description:</label><br><textarea
                class='cajaDescripcion' name="product_description"></textarea placeholder="Insert product description">
    </div>
    </select> </div>
<div> <input class="botonEditProduct" type="submit" value="Add product"></div>
</form>

<%- include('./partials/footer') %>
</body>
</html>